{
  "name": "react-native-quick-argon2",
  "version": "0.0.1",
  "description": "React Native library for fast and secure password hashing and storage using the Argon2 library via JSI",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "//react-native": "lib/module/index",
  "react-native": "src/index",
  "source": "src/index",
  "dependencies": {
    "@phc/format": "^1.0.0"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "argon2",
    "react-native-quick-argon2.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!android/.cxx",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "git submodule update --init --recursive && bob build",
    "release": "changeset publish",
    "example": "nr --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "nr example && nr && nr pods",
    "changeset": "changeset"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/XantreGodlike/react-native-quick-argon2",
  "author": "XantreGodlike <valerik007.vs@gmail.com> (https://github.com/ammarahm-ed)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/XantreGodlike/react-native-quick-argon2/issues"
  },
  "homepage": "https://github.com/XantreGodlike/react-native-quick-argon2#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.4",
    "@changesets/cli": "^2.26.2",
    "@craftzdog/react-native-buffer": "^6.0.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "^18.2.0",
    "react-native": "^0.71.6",
    "react-native-builder-bob": "^0.20.4",
    "react-native-quick-crypto": "^0.6.1",
    "type-fest": "^3.12.0",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@craftzdog/react-native-buffer": "^6.0.0",
    "react": "*",
    "react-native": ">=0.71.0",
    "react-native-quick-base64": "^2.0.5",
    "react-native-quick-crypto": "^0.6.1"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "semi": false,
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
